<div class="container">
    <div class="row">
        <h4>Crypto Curreny Lookup</h4>
    </div>
    <div class="row">
        <%= form_tag home_lookup_path, class: "col s12", :method => 'POST' do %>
            <div class="row">
                <div class="input-field col s12">
                    <%= text_field_tag 'sym', nil, placeholder: 'Enter Crypto Symbol'%>
                </div>
            </div>   
            
            <div class="row">
                <button class="btn waves-effect waves-light" type="submit" name="action">Search
                    <i class="material-icons right">send</i>
                </button>
            </div>
        <% end %>
    </div>
</div>


<%#= @symbol %>

<% if @symbol %>
    <% @lookup_coins.each do |val| %>
        <% if @symbol == val[1]["symbol"] %>
            Symbol - <%= val[1]["symbol"] %><br>
            Rank: <%= val[1]["rank"] %><br>
            Price: <%= val[1]["quotes"]["USD"]["price"].round(2) %>
        <% end %>
    <% end %>
<% end %>
